<section id="login">
    <div class="container">
      <div class="page-header">
        <h1>宣顺化工信息发布系统</h1>
      </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="form-wrap">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name),id:"login-form") do |f| %>
                    <div class="form-group">
                        <%= f.label :email %><br/>
                        <%= f.email_field :email, autofocus: true,class:"form-control",placeholder:"电子邮箱"%>
                    </div>

                    <div class="form-group">
                        <%= f.label :password %><br/>
                        <%= f.password_field :password, autocomplete: "off",class:"form-control",placeholder:"密码",id:"key" %>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" id="showPassword" class="checkbox-align-left">
                        <label class="label">显示密码</label>
                    </div>
                    <% if devise_mapping.rememberable? -%>
                    <div class="checkbox" >
                        <%= f.check_box :remember_me,class:"checkbox-align-left" %>
                        <%= f.label :remember_me,class:"label" %>
                    </div>
                    <% end %>

                    <div>
                        <%= f.submit "登陆",class:"btn btn-custom btn-lg btn-block" %>
                    </div>
                    <% end %>

                    <%= render "devise/shared/links" %>
                    <%= link_to "返回首页", root_path %><br />
                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript">
  $(function() {
    $('#showPassword').click(function(){
        var key_attr = $('#key').attr('type');
        if(key_attr != 'text') {
            $('#key').attr('type', 'text');
        } else {
            $('#key').attr('type', 'password');
        }
    });
  });
</script>
