<section id="login">

    <div class="page-header">
        <h1>宣顺化工信息发布系统</h1>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="form-wrap">
                    <h1><%= t 'forgot_password'%></h1>
                    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                    <%= devise_error_messages! %>

                    <div class="field">
                        <%= f.label :email %><br/>
                        <%= f.email_field :email, autofocus: true,placeholder:"电子邮件" %>
                    </div>

                    <div class="actions">
                        <%= f.submit (t 'reset_password_mail') %>
                    </div>
                    <% end %>
                    <%= render "devise/shared/links" %>
                    <%= link_to "返回首页", root_path %><br />
                </div>
            </div>
        </div>
    </div>
</section>
